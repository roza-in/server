{
  "name": "rozx-server",
  "version": "1.0.0",
  "description": "ROZX Healthcare Platform - Backend API Server",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "nodemon",
    "build": "tsc",
    "start": "node dist/index.js",
    "start:prod": "NODE_ENV=production node dist/index.js",
    "clean": "rimraf dist",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "test": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --coverage",
    "db:help": "node scripts/db-setup.js",
    "db:sql": "node scripts/db-setup.js show-sql",
    "db:status": "node scripts/db-setup.js status",
    "db:push": "node scripts/db-setup.js push"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/roza-in/server.git"
  },
  "keywords": [
    "healthcare",
    "telemedicine",
    "doctor-appointment",
    "hospital-management",
    "express",
    "typescript",
    "supabase"
  ],
  "author": "ROZX Team",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/roza-in/server/issues"
  },
  "homepage": "https://github.com/roza-in/server#readme",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@sendgrid/mail": "^8.1.6",
    "@supabase/supabase-js": "^2.89.0",
    "@types/bcrypt": "^6.0.0",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.3",
    "morgan": "^1.10.1",
    "razorpay": "^2.9.4",
    "sendgrid": "^5.2.3",
    "twilio": "^5.11.1",
    "zod": "^4.3.5"
  },
  "optionalDependencies": {
    "multer": "^1.4.5-lts.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.6",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/morgan": "^1.9.9",
    "@types/node": "^25.0.3",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.10.0",
    "eslint": "^9.14.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.11",
    "openapi-typescript": "^5.4.1",
    "rimraf": "^6.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
